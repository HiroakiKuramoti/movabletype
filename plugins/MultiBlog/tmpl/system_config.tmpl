<mtapp:setting
   id="default_access_allowed"
   label="<__trans phrase="Default system aggregation policy">">
  <ul class="list-unstyled">
    <li>
      <div class="custom-control custom-radio">
        <input type="radio" value="1" name="default_access_allowed" id="default_access_allowed_1" class="custom-control-input rb"<mt:if name="default_access_allowed"> checked="checked"</mt:if> onclick="hide('mb-disallow');show('mb-allow');" />
        <label class="custom-control-label" for="default_access_allowed_1"><__trans phrase="Allow"></label>
      </div>
    </li>
    <li>
      <div class="custom-control custom-radio">
        <input type="radio" value="0" name="default_access_allowed" id="default_access_allowed_0" class="custom-control-input rb"<mt:unless name="default_access_allowed"> checked="checked"</mt:unless> onclick="hide('mb-allow');show('mb-disallow');" />
        <label class="custom-control-label" for="default_access_allowed_0"><__trans phrase="Disallow"></label>
      </div>
    </li>
  </ul>
  <p id="mb-allow" style="display:<mt:if name="default_access_allowed">block<mt:else>none</mt:if>;">
    <__trans phrase="Cross-blog aggregation will be allowed by default.  Individual blogs can be configured through the blog-level MultiBlog settings to restrict access to their content by other blogs.">
  </p>
  <p id="mb-disallow" style="display:<mt:if name="default_access_allowed">none<mt:else>block</mt:if>;">
    <__trans phrase="Cross-blog aggregation will be disallowed by default.  Individual blogs can be configured through the blog-level MultiBlog settings to allow access to their content by other blogs.">
  </p>
</mtapp:setting>
