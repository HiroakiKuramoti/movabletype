<mt:setvarblock name="jq_js_include" append="1">
var $field = parent.jQuery( '#<mt:var name="edit_field" escape="js">' );
if ($field){
    parent.jQuery( '#<mt:var name="edit_field" escape="js">-preview img' ).remove();
    var ids = [];
<mt:loop name="assets">
    <mt:Asset id="$id">
    ids.push('<mt:var name="id" escape="JS">');
    parent.jQuery( '#<mt:var name="edit_field" escape="js">-preview' ).css('background-image', 'url(<$mt:AssetURL$>)');
    parent.jQuery( '#<mt:var name="edit_field" escape="js">-url' ).val('<$mt:AssetURL$>');
    </mt:Asset>
</mt:loop>
    $field.val(ids.join(','));
}
jQuery.fn.mtModal.close();
</mt:setvarblock>

