<mt:setvar name="page_title" value="<__trans phrase="Edit Content Type Data">">
<mt:setvar name="position_actions_bottom" value="1">
<mt:setvar name="screen_id" value="edit-content-type-data">
<mt:setvar name="screen_class" value="edit-content-type-data">
    
<mt:setvarblock name="system_msg">
<div id="msg-block"></div>
  <mt:if name="saved">
    <mtapp:statusmsg
       id="saved"
       class="success">
      <__trans phrase="[_1] has been saved." params="<mt:var name="name">">
    </mtapp:statusmsg>
  </mt:if>
  <mt:if name="err_msg">
    <mtapp:statusmsg
       id="err_msg"
       class="error"
       can_close="0">
      <mt:var name="err_msg">
    </mtapp:statusmsg>
  </mt:if>
</mt:setvarblock>
        
<mt:setvarblock name="html_head" append="1">
<link rel="stylesheet" href="<$mt:var name="static_uri"$>plugins/ContentType/css/content-type.css?v=<$mt:var name="mt_version_id" escape="url"$>">
</mt:setvarblock>

<mt:setvarblock name="js_include" append="1">
<script type="text/javascript" src="<mt:var name="static_uri">plugins/ContentType/js/cms.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
</mt:setvarblock>

<mt:include name="include/header.tmpl" id="header_include">

<mtapp:form id="edit-content-type-data-form" name="edit-content-type-data-form" mode="save_content_type_data">
  <input type="hidden" name="cfg_screen" value="edit_content_type_data" />
  <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
  <input type="hidden" name="content_type_id" value="<mt:var name="content_type_id">" />

  <mtapp:settinggroup id="content_type_data">

    <h2><__trans phrase="Edit <mt:var name="name">"></h2>

    <mt:loop name="entities">
    <mt:if name="can_edit">
    <div>
      <mt:var name="name">
    </div>
    <div>
      <mt:if name="html">
        <mt:var name="html">
      <mt:elseif name"type" eq="varchar">
        <input type="text" name="entity-<mt:var name="entity_id">" class="text long" value="<mt:var name="value">" />
      <mt:elseif name"type" eq="blob">
        <textarea name="entity-<mt:var name="entity_id">" class="text high"><mt:var name="value"></textarea>
      <mt:elseif name"type" eq="integer">
        <input type="text" name="entity-<mt:var name="entity_id">" class="text short" value="<mt:var name="value">" />
      <mt:elseif name"type" eq="float">
        <input type="text" name="entity-<mt:var name="entity_id">" class="text short" value="<mt:var name="value">" />
      </mt:if>
    </div>
    </mt:if>
    </mt:loop>

  </mtapp:settinggroup>

  <mt:setvarblock name="action_buttons">
    <button
       type="submit"
       accesskey="s"
       title="<__trans phrase="Save changes to these settings (s)">"
       class="save action primary button disabled">
      <__trans phrase="Save Changes">
    </button> 
  </mt:setvarblock>
  <mt:include name="include/actions_bar.tmpl" bar_position="bottom" hide_pager="1" settings_bar="1">

</mtapp:form>

<mt:setvarblock name="jq_js_include" append="1">
  jQuery(function() {
    jQuery('input[type="text"]').keyup(function() {
      setDirty(true);
    });
    jQuery('input[type="checkbox"]').click(function() {
      setDirty(true);
    });
    jQuery('input[type="radio"]').click(function() {
      setDirty(true);
    });
    jQuery('textarea').keyup(function() {
      setDirty(true);
    });
    jQuery('select').change(function() {
      setDirty(true);
    });
  });

  jQuery('#edit-content-type-data-form').submit( function() {
    setDirty(false);
    return true;
  });   

</mt:setvarblock>

<mt:include name="include/footer.tmpl">
