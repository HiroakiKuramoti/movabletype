    <a href="javascript:void(0)" class="toggle-link" id="open-category-selector-<mt:var name="content_field_id" escape="html">" onclick="app.fieldCategorySelectors[<mt:var name="content_field_id" escape="html">].open(this)" mt:close-el="close-category-selector-<mt:var name="content_field_id" escape="html">" title="<__trans phrase="Add category">"><__trans phrase="edit"/></a>
