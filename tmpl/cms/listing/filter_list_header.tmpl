<mt:setvarblock name="system_msg" append="1">
    <div id="msg-container">
    <mt:if name="request.deleted">
        <mtapp:newstatusmsg
            id="deleted"
            class="success">
            <__trans phrase="Removed [_1] filters successfully." params="<mt:var name="request.deleted">">
        </mtapp:newstatusmsg>
    </mt:if>
    </div>
</mt:setvarblock>
