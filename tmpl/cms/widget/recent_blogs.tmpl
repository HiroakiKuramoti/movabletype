<mtapp:widget class="favorite-blogs-widget" label="<__trans phrase="Child Sites">" can_close="1">
  <mt:if name="blog_object_loop">
    <div id="favorite-blog-container" class="blog-container">
    <mt:loop name="blog_object_loop">
      <div id="blog-<mt:var name="blog_id">-content" class="row blog-content<mt:if name="__odd__"> odd</mt:if>">
        <div id="blog-<mt:var name="blog_id">-theme-thumbnail" class="col-md-2 thumbnail picture small">
          <img alt="" src="<mt:var name="blog_theme_thumb">" />
        </div>
        <div id="blog-<mt:var name="blog_id">-meta" class="col-md-8 blog-meta">
          <h4 id="blog-<mt:var name="blog_id">-name" class="blog-name">
            <a href="<mt:var name="script_url">?__mode=dashboard&amp;blog_id=<mt:var name="blog_id">">
              <mt:var name="blog_name" escape="html">
            </a>
          </h4>
          <p id="blog-<mt:var name="blog_id">-link" class="blog-link">
            <a href="<mt:var name="blog_url" encode_html="1">">
              <mt:var name="blog_url" encode_html="1">
            </a>
          </p>
          <mt:if name="blog_description">
          <div id="blog-<mt:var name="blog_id">-description" class="blog-description">
            <mt:var name="blog_description" remove_html="1">
          </div>
          </mt:if>
          <ul id="blog-<mt:var name="blog_id">-control" class="list-inline blog-control">
            <li class="list-inline-item">
            <mt:if name="can_access_to_entry_list">
              <a href="<mt:var name="script_url">?__mode=list&amp;_type=entry&amp;blog_id=<mt:var name="blog_id">">
                <__trans phrase="[quant,_1,entry,entries]" params="<mt:var name="blog_entry_count">">
              </a>
            <mt:else>
              <__trans phrase="[quant,_1,entry,entries]" params="<mt:var name="blog_entry_count">">
            </mt:if>
            </li>
            <li class="list-inline-item">
            <mt:if name="can_access_to_page_list">
              <a href="<mt:var name="script_url">?__mode=list&amp;_type=page&amp;blog_id=<mt:var name="blog_id">">
                <__trans phrase="[quant,_1,page,pages]" params="<mt:var name="blog_page_count">">
              </a>
            <mt:else>
              <__trans phrase="[quant,_1,page,pages]" params="<mt:var name="blog_page_count">">
            </mt:if>
            </li>
            <li class="list-inline-item">
            <mt:if name="can_access_to_comment_list">
              <a href="<mt:var name="script_url">?__mode=list&amp;_type=comment&amp;blog_id=<mt:var name="blog_id">">
                <__trans phrase="[quant,_1,comment,comments]" params="<mt:var name="blog_comment_count">">
              </a>
            <mt:else>
              <__trans phrase="[quant,_1,comment,comments]" params="<mt:var name="blog_comment_count">">
            </mt:if>
            </li>
            <mt:if name="can_access_to_template_list">
            <li class="list-inline-item">
              <a href="<mt:var name="script_url">?__mode=list_template&amp;blog_id=<mt:var name="blog_id">">
                <__trans phrase="Templates">
              </a>
            </li>
            </mt:if>
            <mt:if name="can_access_to_blog_setting_screen">
            <li class="list-inline-item">
              <a href="<mt:var name="script_url">?__mode=cfg_prefs&amp;blog_id=<mt:var name="blog_id">">
                <__trans phrase="Settings">
              </a>
            </li>
            </mt:if>
            <mt:if name="can_use_tools_search">
            <li class="list-inline-item">
              <a href="<mt:var name="script_url">?__mode=search_replace&amp;blog_id=<mt:var name="blog_id">">
                <__trans phrase="Search">
              </a>
            </li>
            </mt:if>
          </ul>
        </div>
        <div class="col-md-2">
          <mt:if name="can_create_new_entry">
            <a class="button btn btn-default float-right" href="<mt:var name="script_url">?__mode=view&amp;_type=entry&amp;blog_id=<mt:var name="blog_id">">
              <__trans phrase="New Entry">
            </a>
          </mt:if>
        </div>
      </div>
    </mt:loop>
    </div>
    <mt:if name="has_more_blogs">
      <div class="select-blog">
        <a href="<mt:var name="script_url">?__mode=dialog_select_weblog&amp;blog_id=<mt:var name="blog_id">&amp;return_args=__mode=dashboard&amp;select_favorites=1" class="mt-open-dialog">
          <__trans phrase="Select another child site...">
        </a>
      </div>
    </mt:if>
  <mt:else>
    <mtapp:statusmsg
      id="zero-state"
      class="info zero-state"
      can_close="0">
      <__trans phrase="No blogs could be found. [_1]" params="<mt:if name="can_create_blog"><a href="<mt:var name="script_url">?__mode=view&amp;_type=blog&amp;blog_id=<mt:var name="blog_id">"><__trans phrase="Create New"></a></mt:if>">
    </mtapp:statusmsg>
  </mt:if>
</mtapp:widget>
