<mt:if name="loop_notification_dashboard">
<mtapp:newwidget
   class="message-center-widget"
   label="<__trans phrase="Messages from the system">"
   can_close="0">
<mt:setvarblock name="widget_header">
</mt:setvarblock>
<div class="panel-group" id="notification_accordion">
<mt:loop name="loop_notification_dashboard">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <a data-toggle="collapse" data-parent="#notification_accordion" href="#collapse<mt:var name="__index__">">
          <img src="<mt:var name="static_uri">images/status_icons/<mt:if name="level"><mt:var name="level"><mt:else>warning</mt:if>.gif" />
          <mt:var name="text">
        </a>
      </div>
    </div>
    <div id="collapse<mt:var name="__index__">" class="panel-collapse collapse">
      <div class="panel-body">
        <mt:var name="detail">
      </div>
    </div>
  </div>
</mt:loop>
</div>
</mtapp:newwidget>
</mt:if>
