<mt:if name="tag_loop">
    <mt:setvarblock name="tabs" append="1">
        <li id="tag-tab" class="tab <mt:if name="tab" eq="tag">active</mt:if>">
          <a href="#tag-panel" data-toggle="tab">
            <span>
              <__trans phrase="Tags">
            </span>
          </a>
        </li>
    </mt:setvarblock>

    <div id="tag-panel" class="tab-pane blog-stats-widget-panel <mt:if name="tab" eq="tag">active</mt:if>">
<mt:Section cache_prefix="tagcloud" period="3600" by_blog="1" by_user="1">
        <div id="tag-cloud">
            <ul id="tag-cloud-list" class="list-inline">
            <mt:loop name="tag_loop">
                <li class="tag-<$mt:var name="rank"$>"><a href="javascript:void(0)" onclick="recentEntriesForTag('<mt:var name="name" escape="html" escape="js">', 'tag-cloud-recent-entries'); return false"><$mt:var name="name" escape="html"$></a></li>
            </mt:loop>
            </ul>
        </div>
</mt:Section>
        <div id="tag-cloud-recent-entries"></div>
    </div>
</mt:if>
