<mtapp:widget class="news-widget" tabbed="1" label="<__trans phrase="News">" can_close="1">
  <div id="mt-news-panel">
    <mt:if name="news_html">
      <$mt:var name="news_html"$>
    <mt:else>
      <p><__trans phrase="No Movable Type news available."></p>
    </mt:if>
  </div>
</mtapp:widget>

