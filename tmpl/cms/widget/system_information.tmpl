<mtapp:widget
  class="system-information-widget"
  label="<__trans phrase="System Information">"
  can_close="1">
  <div class="card-group">
    <div class="card text-center">
      <div class="card-block">
        <p class="card-text h1"><mt:var name="active_users"></p>
        <p class="card-text"><__trans phrase="Active Users"></p>
      </div>
    </div>
    <div class="card text-center">
      <div class="card-block">
        <p class="card-text h1"><mt:var name="total_sites"></p>
        <p class="card-text"><__trans phrase="Sites"></p>
      </div>
    </div>
    <div class="card text-center">
      <div class="card-block">
        <p class="card-text h1"><mt:var name="total_content_types"></p>
        <p class="card-text"><__trans phrase="Content Types"></p>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-block">
      <ul class="list-unstyled">
        <li><__trans phrase="Server Model">: <mt:var name="server_model"></li>
      </ul>
    </div>
  </div>
</mtapp:widget>

