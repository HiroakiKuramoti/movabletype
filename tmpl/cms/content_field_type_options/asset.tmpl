<mt:app:ContentFieldOptionGroup
   type="asset">

  <mtapp:ContentFieldOption
     id="asset-multiple"
     label="<__trans phrase="Allow users to select multiple values?">">
    <input type="checkbox" class="mt-switch form-control" id="asset-multiple" /><label for="asset-multiple"><__trans phrase="Allow users to select multiple values?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset-min_length"
     label="<__trans phrase="Minimum number of selection">">
    <input type="number" name="asset-min_length" id="asset-min" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset-max_length"
     label="<__trans phrase="maximum number of selection">">
    <input type="number" name="asset-max_length" id="asset-max" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset-can_add"
     label="<__trans phrase="Allow users to update a new asset?">">
    <input type="checkbox" class="mt-switch form-control" id="asset-can_upload" /><label for="asset-can_upload"><__trans phrase="Allow users to update a new asset?"></label>
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
