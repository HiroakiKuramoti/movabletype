<mt:app:ContentFieldOptionGroup
   type="asset_video">

  <mtapp:ContentFieldOption
     id="asset_video-multiple"
     label="<__trans phrase="Allow users to select multiple video assets?">">
    <input type="checkbox" class="mt-switch form-control" id="asset_video-multiple" name="multiple"><label for="asset_video-multiple"><__trans phrase="Allow users to select multiple video assets?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_video-min"
     label="<__trans phrase="Minimum number of selection">">
    <input type="number" name="min" id="asset_video-min" class="form-control w-25" min="0">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_video-max"
     label="<__trans phrase="maximum number of selection">">
    <input type="number" name="max" id="asset_video-max" class="form-control w-25" min="1">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_video-allow_upload"
     label="<__trans phrase="Allow users to upload a new video asset?">">
    <input type="checkbox" class="mt-switch form-control" id="asset_video-allow_upload" name="allow_upload"><label for="asset_video-allow_upload"><__trans phrase="Allow users to upload a new video asset?"></label>
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
