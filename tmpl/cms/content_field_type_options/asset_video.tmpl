<mt:app:ContentFieldOptionGroup
   type="asset_video">

  <mtapp:ContentFieldOption
     id="asset_video-multiple"
     label="<__trans phrase="Allow users to select multiple values?">">
    <input type="checkbox" class="mt-switch form-control" id="asset_video-multiple" /><label for="asset_video-multiple"><__trans phrase="Allow users to select multiple values?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_video-min_length"
     label="<__trans phrase="Minimum number of selection">">
    <input type="number" name="asset_video-min_length" id="asset_video-min" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_video-max_length"
     label="<__trans phrase="maximum number of selection">">
    <input type="number" name="asset_video-max_length" id="asset_video-max" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_video-can_add"
     label="<__trans phrase="Allow users to update a new video asset?">">
    <input type="checkbox" class="mt-switch form-control" id="asset_video-can_upload" /><label for="asset_video-can_upload"><__trans phrase="Allow users to update a new video asset?"></label>
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
