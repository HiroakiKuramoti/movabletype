<mt:app:ContentFieldOptionGroup
   type="asset_audio">

  <mtapp:ContentFieldOption
     id="asset_audio-multiple"
     label="<__trans phrase="Allow users to select multiple assets?">">
    <input ref="multiple" type="checkbox" class="mt-switch form-control" id="asset_audio-multiple" name="multiple"><label for="asset_audio-multiple"><__trans phrase="Allow users to select multiple assets?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_audio-min"
     label="<__trans phrase="Minimum number of selection">">
    <input ref="min" type="number" name="min" id="asset_audio-min" class="form-control w-25" min="0">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_audio-max"
     label="<__trans phrase="maximum number of selection">">
    <input ref="max" type="number" name="max" id="asset_audio-max" class="form-control w-25" min="1">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_audio-allow_upload"
     label="<__trans phrase="Allow users to upload a new audio asset?">">
    <input ref="allow_upload" type="checkbox" class="mt-switch form-control" id="asset_audio-allow_upload" name="allow_upload"><label for="asset_audio-allow_upload"><__trans phrase="Allow users to upload a new audio asset?"></label>
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
