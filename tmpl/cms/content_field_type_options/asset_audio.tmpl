<mt:app:ContentFieldOptionGroup
   type="asset_audio">

  <mtapp:ContentFieldOption
     id="asset_audio-multiple"
     label="<__trans phrase="Allow users to select multiple values?">">
    <input type="checkbox" class="mt-switch form-control" id="asset_audio-multiple" /><label for="asset_audio-multiple"><__trans phrase="Allow users to select multiple values?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_audio-min_length"
     label="<__trans phrase="Minimum number of selection">">
    <input type="number" name="asset_audio-min_length" id="asset_audio-min" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_audio-max_length"
     label="<__trans phrase="maximum number of selection">">
    <input type="number" name="asset_audio-max_length" id="asset_audio-max" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="asset_audio-can_add"
     label="<__trans phrase="Allow users to update a new audio asset?">">
    <input type="checkbox" class="mt-switch form-control" id="asset_audio-can_upload" /><label for="asset_audio-can_upload"><__trans phrase="Allow users to update a new audio asset?"></label>
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
