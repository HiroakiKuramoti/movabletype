<mt:app:ContentFieldOptionGroup
   type="tables">

  <mtapp:ContentFieldOption
     id="tables-initial_rows"
     label="<__trans phrase="Initial Rows">">
    <input type="text" name="tables-initial_rows" id="tables-initial_rows" class="form-control" value="5" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tables-initial_cols"
     label="<__trans phrase="Initial Cols">">
    <input type="text" name="tables-initial_cols" id="tables-initial_cols" class="form-control" value="5" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tables_row_heading"
     label="<__trans phrase="Row Heading">"
     show_hint="1"
     hint_id="tables_row_heading"
     hint="<__trans phrase=" Commma separated list">">
    <input type="text" name="tables_row_heading" id="tables_row_heading" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tables_col_heading"
     label="<__trans phrase="Col Heading">"
     show_hint="1"
     hint_id="tables_col_heading"
     hint="<__trans phrase=" Commma separated list">">
    <input type="text" name="tables_col_heading" id="tables_col_heading" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tables-can_increase_decrease_rows"
     label="<__trans phrase="Allow users to increase/decrease rows?">">
    <input type="checkbox" class="mt-switch form-control" id="tables-can_increase_decrease_rows" /><label for="tables-can_increase_decrease_rows"><__trans phrase="Allow users to increase/decrease rows?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tables-can_increase_decrease_cols"
     label="<__trans phrase="Allow users to increase/decrease cols?">">
    <input type="checkbox" class="mt-switch form-control" id="tables-can_increase_decrease_cols" /><label for="tables-can_increase_decrease_cols"><__trans phrase="Allow users to increase/decrease cols?"></label>
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>

