<mt:app:ContentFieldOptionGroup
   type="tags">

  <mtapp:ContentFieldOption
     id="tags-multiple"
     label="<__trans phrase="Allow users to select multiple values?">">
    <input type="checkbox" class="mt-switch form-control" id="tags-multiple" /><label for="tags-multiple"><__trans phrase="Allow users to select multiple values?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tags-min_length"
     label="<__trans phrase="Minimum number of selection">">
    <input type="number" name="tags-min_length" id="tags-min" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tags-max_length"
     label="<__trans phrase="maximum number of selection">">
    <input type="number" name="tags-max_length" id="tags-max" class="form-control" />
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tags-initial_value"
     label="<__trans phrase="Initial Value">">
    <input type="text" name="tags-initial_value" id="tags-initial_value" class="form-control" />
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
