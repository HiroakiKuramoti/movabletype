<mt:app:ContentFieldOptionGroup
   type="tags">

  <mtapp:ContentFieldOption
     id="tags-multiple"
     label="<__trans phrase="Allow users to select multiple values?">">
    <input ref="multiple" type="checkbox" class="mt-switch form-control" id="tags-multiple" name="multiple"><label for="tags-multiple"><__trans phrase="Allow users to select multiple values?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tags-min"
     label="<__trans phrase="Minimum number of selection">">
    <input ref="min" type="number" name="min" id="tags-min" class="form-control w-25" min="0" >
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tags-max"
     label="<__trans phrase="maximum number of selection">">
    <input ref="max" type="number" name="max" id="tags-max" class="form-control w-25" min="1">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="tags-initial_value"
     label="<__trans phrase="Initial Value">">
    <input ref="initial_value" type="text" name="initial_value" id="tags-initial_value" class="form-control" />
  </mtapp:ContentFieldOption>

</mt:app:ContentFieldOptionGroup>
