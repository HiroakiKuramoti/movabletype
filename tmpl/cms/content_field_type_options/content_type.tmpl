<mt:app:ContentFieldOptionGroup
   type="content_type">

  <mtapp:ContentFieldOption
     id="content_type-multiple"
     label="<__trans phrase="Allow users to select multiple values?">">
    <input ref="multiple" type="checkbox" class="mt-switch form-control" id="content_type-multiple" name="multiple"><label for="content_type-multiple"><__trans phrase="Allow users to select multiple values?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="content_type-min"
     label="<__trans phrase="Minimum number of selection">">
    <input ref="min" type="number" name="min" id="content_type-min" class="form-control w-25" min="0">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="content_type-max"
     label="<__trans phrase="maximum number of selection">">
    <input ref="max" type="number" name="max" id="content_type-max" class="form-control w-25" min="1">
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="content_type-can_add"
     label="<__trans phrase="Allow users to create a new content data?">">
    <input ref="can_add" type="checkbox" class="mt-switch form-control" id="content_type-can_create" name="can_add"><label for="content_type-can_create"><__trans phrase="Allow users to create a new content data?"></label>
  </mtapp:ContentFieldOption>

  <mtapp:ContentFieldOption
     id="content_type-source"
     required="1"  
     label="<__trans phrase="Source Content Type">">
    <select ref="source" name="source" id="content_type-source" class="form-control">
    <mt:loop name="content_types">
      <option value="<mt:var name="id" escape="html">"><mt:var name="name" escape="html"></option>
    </mt:loop>
    </select>
  </mtapp:ContentFieldOption>
</mt:app:ContentFieldOptionGroup>
