<mt:setvarblock name="page_title"><__trans phrase="Restore from a Backup"></mt:setvarblock>
<mt:setvar name="position_actions_bottom" value="1">
<mt:setvar name="restore" value="1">

<mt:setvarblock name="content">
<mt:if name="error">
  <mtapp:newstatusmsg
     id="generic-error"
     class="danger"
     can_close="0">
    <mt:var name="error">
  </mtapp:newstatusmsg>
</mt:if>

<div id="restore-panel">
<mt:if name="missing_sax">
  <mtapp:newstatusmsg
     id="missing-sax"
     class="danger"
     can_close="0">
    <__trans phrase="Perl module XML::SAX and/or some of its dependencies are missing.  Movable Type cannot restore the system without these modules.">
  </mtapp:newstatusmsg>
<mt:else>
  <form method="post" enctype="multipart/form-data" action="<mt:var name="script_url">">
    <input type="hidden" name="__mode" value="restore" />
    <input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />
    <mtapp:setting
       id="file"
       label="<__trans phrase="Backup File">"
       hint="<__trans phrase="If your backup file is located on a remote computer, you can upload it here.  Otherwise, Movable Type will automatically look in the 'import' folder within your Movable Type directory.">"
       help_page="backup_restore"
       help_section="source_file">
      <input name="file" type="file" />
    </mtapp:setting>

    <mtapp:setting
       id="overwrite_global_templates"
       label="<__trans phrase="Options">"
       show_label="0"
       hint="<__trans phrase="Allow existing global templates to be overwritten by global templates in the backup file.">">
      <input name="overwrite_global_templates" id="overwrite_global_templates" type="checkbox" />
      <label for="overwrite_global_templates"><__trans phrase="Overwrite global templates."></label>
    </mtapp:setting>

    <mt:setvarblock name="action_buttons">
      <button
         type="submit"
         accesskey="r"
         title="<__trans phrase="Restore (r)">"
         class="restore action primary button btn btn-primary">
        <__trans phrase="Restore">
      </button>
    </mt:setvarblock>
    <mt:include name="include/actions_bar.tmpl" bar_position="bottom" hide_pager="1" settings_bar="1">
  </form>
</mt:if>
</div>
</mt:setvarblock>

<mt:include name="layout/default.tmpl">
<mt:var name="layout">
