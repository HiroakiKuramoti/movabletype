<mtapp:setting
   id="username"
   label="<__trans phrase="Username">"
   label_class="top-label form-group"
   no_grid="1">
  <input type="text" name="username" id="username" class="form-control text full" />
</mtapp:setting>
<mtapp:setting
   id="password"
   label="<__trans phrase="Password">"
   label_class="top-label form-group"
   no_grid="1">
