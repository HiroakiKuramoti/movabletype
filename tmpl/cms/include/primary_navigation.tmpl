<mt:setvarblock name="user_screen_name"><mt:if name="author_display_name"><mt:var name="author_display_name" escape="html"><mt:else><mt:var name="author_name" escape="html"></mt:if></mt:setvarblock>

<mt:setvarblock name="product_header_name">
<mt:if name="scope_type" eq="user">
  Movable Type
<mt:elseif name="scope_type" eq="system">
  <__trans phrase="System">
<mt:elseif name="scope_type" eq="website">
  <mt:var name="curr_website_name" escape="html">
<mt:elseif name="scope_type" eq="blog">
  <mt:var name="curr_blog_name" escape="html">
</mt:if>
</mt:setvarblock>

<mt:if name="scope_type" ne="user">
<script>
function closeSiteMenu(e) {
    jQuery('.mt-primaryNavigation__container:first-of-type').fadeIn();
    jQuery('.mt-primaryNavigation__container:last-of-type').fadeOut();

    jQuery('body').off('click', closeSiteMenu);
}

function openSiteMenu(e) {
    jQuery('.mt-primaryNavigation__container:last-of-type').fadeIn();
    jQuery('.mt-primaryNavigation__container:first-of-type').fadeOut();

    e.stopPropagation();

    jQuery('body').on('click', closeSiteMenu);
}

function stopPropagation(e) {
    e.stopPropagation();
}
</script>

<div class="mt-primaryNavigation__container">
<mt:if name="scope_type" eq="system">
  <div class="mt-primaryNavigation__header--invert" style="background-color: #595959;">
<mt:else>
  <div class="mt-primaryNavigation__header">
</mt:if>
    <div class="col-10">
      <h1 class="mt-productHeader__logo">
<mt:if name="scope_type" eq="system">
        <img src="<mt:var name="static_uri">images/logo-mark-mono.svg" alt="Movable Type" width="32" height="32">
<mt:else>
        <img src="<mt:var name="static_uri">images/logo-mark.svg" alt="Movable Type" width="32" height="32">
</mt:if>
        <span class="mt-productHeader__name">
          <mt:var name="product_header_name">
        </span>
      </h1>
    </div>
    <div class="col-2">
      <a href="javascript:void(0)" class="mt-primaryNavigation__siteMenu" onclick="openSiteMenu(event); return false;">
        <mtapp:svgicon id="ic_menu" title="<__trans phrase="Open Site Menu">">
      </a>
    </div>
  </div>

<mt:if name="menu_actions">
  <div class="mt-primaryNavigation__control">
  <mt:loop name="menu_actions">
    <mt:setvarblock name="menu_action_href"><mt:if name="href"><mt:var name="href" escape="html"><mt:elseif name="mode"><mt:var name="mt_url">?__mode=<mt:var name="mode" escape="html"><mt:if name="blog_id" ne="">&blog_id=<mt:var name="blog_id"></mt:if><mt:else>javascript:void(0)</mt:if></mt:setvarblock>
    <mt:setvarblock name="escaped_menu_action_label"><__trans phrase="<mt:var name="label">" escape="html"></mt:setvarblock>

    <a href="<mt:var name="menu_action_href">" class="btn btn-default <mt:var name="class" escape="html">"<mt:if name="target"> target="<mt:var name="target" escape="html">"</mt:if>>
      <mtapp:svgicon id="$icon" title="$escaped_menu_action_label">
      <mt:var name="escaped_menu_action_label">
    </a>
  </mt:loop>
  </div>
</mt:if>

  <div class="mt-primaryNavigation__content">
    <ul id="primaryNavigation" class="mt-primaryNavigation__list" data-children=".item">
    <mt:loop name="top_nav_loop">
      <li class="item mt-primaryNavigation__item">
        <a data-toggle="collapse" data-parent="#primaryNavigation" href="#primayNavigation-item<mt:var name="__counter__">" aria-expanded="<mt:if name="screen_group" eq="$id">true<mt:else>false</mt:if>" aria-controls="primayNavigation-item<mt:var name="__counter__">">
          <mt:setvarblock name="escaped_label"><mt:var name="label" escape="html"></mt:setvarblock>
          <mt:if name="icon">
            <mt:setvarblock name="escaped_icon"><mt:var name="icon" escape="html"></mt:setvarblock>
            <mtapp:svgicon id="$escaped_icon" title="$escaped_label" size="sm">
          <mt:else>
            <mtapp:svgicon id="ic_box" title="$escaped_label" size="sm">
          </mt:if>
          <mt:var name="escaped_label">
        </a>
        <div id="primayNavigation-item<mt:var name="__counter__">" class="collapse<mt:if name="screen_group" eq="$id"> show</mt:if>" role="tabpanel">
          <ul class="mt-primaryNavigation__child">
      <mt:loop name="sub_nav_loop">
        <mt:if name="allowed">
            <li>
              <a href="<mt:var name="link" escape="html">"<mt:if name="current"> class="selected"<mt:elseif name="dialog"> class="mt-modal-open" data-mt-modal-large</mt:if>>
                <mt:var name="label" escape="html">
              </a>
            </li>
        </mt:if>
      </mt:loop>
          </ul>
        </div>
      </li>
    </mt:loop>
    </ul>
  </div>

  <div class="mt-primaryNavigation__info">
    <button class="btn btn-link btn-block text-left" type="button" id="userDropdownMenu" data-toggle="dropdown" data-offset="100%,-100%" alia-haspopup="true" aria-expanded="false"><mt:if name="author_userpic_url"><img src="<mt:var name="author_userpic_url" escape="html">" alt="" widht="32" height="32" class="mr-1 rounded-circle"><mt:else><img src="<mt:var name="static_uri">images/user-default.svg" alt="" widht="32" height="32" class="mr-1"></mt:if><mt:var name="user_screen_name"></button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdownMenu">
      <a class="dropdown-item" href="<mt:var name="mt_url">?__mode=view&_type=author&id=<mt:var name="author_id" escape="url">"><__trans phrase="Profile"></a>
      <a class="dropdown-item" href="<__trans phrase="https://movabletype.org/documentation/">" target="_blank"><__trans phrase="Documentation"></a>
      <a class="dropdown-item" href="<mt:var name="mt_url">?__mode=logout"><__trans phrase="Sign out"></a>
    </div>
  </div>
</div>
</mt:if>

<mt:if name="scope_type" eq="user">
<div class="mt-primaryNavigation__container" style="background-color: #595959; height: 100%;">
<mt:else>
<div class="mt-primaryNavigation__container" style="background-color: #595959; display: none; height: 100%;" onclick="stopPropagation(event);">
</mt:if>
  <div class="mt-primaryNavigation__header--invert">
    <div class="col-10">
      <h1 class="mt-productHeader__logo">
        <img src="<mt:var name="static_uri">images/logo-mark-mono.svg" alt="Movable Type" width="32" height="32">
        <span class="mt-productHeader__name">
          <mt:var name="product_header_name">
        </span>
      </h1>
    </div>
<mt:if name="scope_type" ne="user">
    <div class="col-2">
      <a href="javascript:void(0)" class="mt-primaryNavigation__siteMenu" onclick="closeSiteMenu(event); return false;">
        <mtapp:svgicon id="ic_menu" title="<__trans phrase="Close Site Menu">">
      </a>
    </div>
</mt:if>
  </div>

  <div class="mt-primaryNavigation__control">
    <ul class="mt-primaryNavigation__sites">
<mt:if name="fav_website_loop">
      <li>
        <span class="text-light">
          <__trans phrase="Sites">
        </span>
      </li>
      <li>
        <ul class="list-unstyled">
  <mt:loop name="fav_website_loop">
          <li>
    <mt:if name="fav_website_can_link">
            <a href="<$mt:var name="mt_url"$>?blog_id=<$mt:var name="fav_website_id"$>&amp;<$mt:var name="return_args" escape="html"$>" class="scope-link text-light">
              <mt:var name="fav_website_name" escape="html">
            </a>
    <mt:else>
            <span class="text-light">
              <mt:var name="fav_website_name" escape="html">
            </span>
    </mt:if>
          </li>
    <mt:if name="__last__">
      <mt:unless name="selector_hide_website_chooser">
          <li id="select-website" class="select-another">
            <a href="<mt:var name="script_url">?__mode=dialog_select_website&amp;select_favorites=1&amp;return_args=<mt:var name="return_args" escape="url">" class="mt-open-dialog mt-modal-open scope-link text-light" data-mt-modal-large>
              <__trans phrase="Select another site...">
            </a>
          </li>
      </mt:unless>
    </mt:if>
  </mt:loop>
        </ul>
      </li>
</mt:if>
<mt:if name="fav_blog_loop">
      <li>
        <span class="text-light">
          <__trans phrase="Child Sites">
        </span>
      </li>
      <li>
        <ul class="list-unstyled">
  <mt:loop name="fav_blog_loop">
          <li>
            <a href="<$mt:var name="mt_url"$>?blog_id=<$mt:var name="fav_blog_id"$>&amp;<$mt:var name="return_args" escape="html"$>" class="scope-link text-light">
              <mt:var name="fav_blog_name" escape="html">
              <span class="parent">
                <__trans phrase="(on [_1])" params="<mt:var name="fav_parent_name" escape="html" escape="html">">
              </span>
            </a>
          </li>
    <mt:if name="__last__">
      <mt:unless name="selector_hide_blog_chooser">
          <li id="select-blog" class="select-another">
            <a href="<mt:var name="script_url">?__mode=dialog_select_weblog&amp;select_favorites=1&amp;return_args=<mt:var name="return_args" escape="url">" class="mt-open-dialog mt-modal-open scope-link text-light" data-mt-modal-large>
              <__trans phrase="Select another child site...">
            </a>
          </li>
      </mt:unless>
    </mt:if>
  </mt:loop>
        </ul>
      </li>
</mt:if>
    </ul>
  </div>

  <div class="mt-primaryNavigation__content">
<mt:if name="scope_type" ne="system">
    <a href="<mt:var name="script_url">?__mode=dashboard&blog_id=0" class="mt-primaryNavigation__system">
      <__trans phrase="System">
    </a>
</mt:if>
<mt:if name="scope_type" ne="user">
    <a href="<mt:var name="script_url">?__mode=dashboard" class="mt-primaryNavigation__system">
      <__trans phrase="Dashboard">
    </a>
</mt:if>
  </div>

<mt:if name="scope_type" eq="user">
  <div class="mt-primaryNavigation__info">
    <button class="btn btn-link btn-block text-left text-light" type="button" id="userDropdownMenu" data-toggle="dropdown" data-offset="100%,-100%" alia-haspopup="true" aria-expanded="false"><mt:if name="author_userpic_url"><img src="<mt:var name="author_userpic_url" escape="html">" alt="" widht="32" height="32" class="mr-1 rounded-circle"><mt:else><img src="<mt:var name="static_uri">images/user-default.svg" alt="" widht="32" height="32" class="mr-1"></mt:if><mt:var name="user_screen_name"></button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdownMenu">
      <a class="dropdown-item" href="<mt:var name="mt_url">?__mode=view&_type=author&id=<mt:var name="author_id" escape="url">"><__trans phrase="Profile"></a>
      <a class="dropdown-item" href="<__trans phrase="https://movabletype.org/documentation/">" target="_blank"><__trans phrase="Documentation"></a>
      <a class="dropdown-item" href="<mt:var name="mt_url">?__mode=logout"><__trans phrase="Sign out"></a>
    </div>
  </div>
</mt:if>
</div>

