<mt:if tag="ContentID" gt="0">
<div class="row my-4">
  <div class="col preview-id">
    <b><__trans phrase="ID"></b><br/>
    <mt:ContentID escape="html">
  </div>
</div>
</mt:if>

<mt:setvartemplate name="multiple_values"><mt:var name="__key__" escape="html">(<mt:var name="__value__" escape="html">)</mt:ContentField></mt:setvartemplate>

<mt:setvartemplate name="asset_values"><mt:AssetLabel> (ID:<mt:AssetID>)</mt:setvartemplate>

<mt:ContentFields>
<div class="row my-4">
  <div class="col preview-title">
    <b><mt:var name="content_field_options{label}" escape="html"> (<mt:var name="content_field_type_label" escape="html">)</b><br/>
  <mt:ContentField>
    <mt:if name="content_field_type" eq="select_box">
      <mt:var name="multiple_values">
    <mt:elseif name="content_field_type" eq="radio_button">
      <mt:var name="multiple_values">
    <mt:elseif name="content_field_type" eq="checkboxes">
      <mt:var name="multiple_values">
    <mt:elseif name="content_field_type" eq="asset">
      <mt:var name="asset_values">
    <mt:elseif name="content_field_type" eq="asset_audio">
      <mt:var name="asset_values">
    <mt:elseif name="content_field_type" eq="asset_video">
      <mt:var name="asset_values">
    <mt:elseif name="content_field_type" eq="asset_image">
      <mt:var name="asset_values">
    <mt:elseif name="content_field_type" eq="categories">
      <mt:CategoryLabel> (ID:<mt:CategoryID>)
    <mt:elseif name="content_field_type" eq="tags">
      <mt:TagLabel><mt:if tag="tagid"> (ID:<mt:TagID>)</mt:if>
    <mt:else>
      <mt:var name="__value__" escape="html">
    </mt:if>
    <br/>
  </mt:ContentField>
  </div>
</div>
</mt:ContentFields>

