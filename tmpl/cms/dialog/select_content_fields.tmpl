<mt:setvar name="screen_id" value="select-content-field">
<mt:setvar name="page_title" value="<__trans phrase="Select List Content Field">">

<mt:setvarblock name="page_content">
<mtapp:settinggroup id="content_field">
<mt:if name="content_fields">
<ul>
  <mt:loop name="content_fields">
  <li>
    <label for="<mt:var name="id">"><input type="checkbox" name="lock_content_field" value="<mt:var name="id">"><mt:var name="name"></mt:label>
  </li>
  </mt:loop>
</ul>
<mt:else>
  <__trans phrase="No Content Field.">
</mt:if>
</mtapp:settinggroup>
</mt:setvarblock>

<mt:include name="layout/default.tmpl">
<mt:var name="layout">
